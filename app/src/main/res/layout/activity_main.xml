<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageButton
            android:id="@+id/im_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:background="?actionBarItemBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_weight="6000"
            android:layout_marginStart="30dp"
            android:textSize="25dp"/>

        <ImageView
            android:id="@+id/tool_m"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>


    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_categry"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:cardElevation="20dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="18dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/and"
            app:layout_constraintEnd_toStartOf="@id/card_sub_category"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Cotegry"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginTop="100dp"
                android:gravity="center"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_sub_category"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:cardElevation="20dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="18dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/and"
            app:layout_constraintStart_toEndOf="@id/card_categry"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/card_add_product">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/cold_drink1"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Category"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_add_product"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:cardElevation="20dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="18dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/and"
            app:layout_constraintStart_toEndOf="@id/card_sub_category"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Product"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_master_entry"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:cardElevation="20dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="18dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toStartOf="@id/card_5"
            app:layout_constraintTop_toBottomOf="@id/card_categry"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Master Entry"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="45dp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_6"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:cardElevation="20dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="18dp"
            android:layout_margin="8dp"
            app:layout_constraintStart_toEndOf="@id/card_5"
            app:layout_constraintTop_toBottomOf="@id/card_categry"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enquiry"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_5"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:cardElevation="20dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="18dp"
            android:layout_margin="8dp"
            app:layout_constraintStart_toEndOf="@id/card_master_entry"
            app:layout_constraintTop_toBottomOf="@id/card_categry"
            app:layout_constraintEnd_toStartOf="@id/card_6">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispatch items"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_deary_breackfast"
            android:layout_width="180dp"
            android:layout_height="130dp"
            app:cardElevation="20dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="18dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/and"
            app:layout_constraintEnd_toStartOf="@id/card_logout"
            app:layout_constraintTop_toBottomOf="@id/card_6"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dairy and Breackfast"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_logout"
            android:layout_width="180dp"
            android:layout_height="130dp"
            app:cardElevation="20dp"
            android:layout_marginTop="10dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="18dp"
            android:backgroundTint="@color/and"
            app:layout_constraintStart_toEndOf="@id/card_deary_breackfast"
            app:layout_constraintTop_toBottomOf="@id/card_6"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:textColor="@color/red"
                android:textSize="30dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_scaner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/card_logout"
            android:layout_margin="10dp"
            app:cardElevation="20dp"
            android:backgroundTint="@color/and"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="18dp">

            <ImageView
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/scann"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/hii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"/>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>