<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Update_Disply_add_categry_Act">

    <TextView
        android:id="@+id/e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Old Cat..name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:textSize="20dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/te_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kjndfknf"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:textSize="20dp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/e"/>

    <EditText
        android:id="@+id/ed_update_ca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Update categry name"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/te_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/bt_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:background="?actionBarItemBackground"
        android:textColor="@color/blue"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/ed_update_ca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>